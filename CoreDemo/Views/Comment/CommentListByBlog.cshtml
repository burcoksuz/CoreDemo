@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
	<h4>Yorumlar</h4>
	@foreach(var item in Model){
	<div class="media">
		<img src="~/Tema/images/t1.jpg" alt="" class="img-fluid" />
		<div class="media-body">
			<h5 class="mt-0">@item.CommentUserName</h5>
			<p>
				@item.CommentContent
			</p>

			<div class="media mt-3">
				<a class="d-flex pr-3" href="#">
					<img src="~/Tema/images/t2.jpg" alt="" class="img-fluid" />
				</a>
				<div class="media-body">
					<h5 class="mt-0">@item.CommentUserName</h5>
					<p>
						@item.CommentContent
					</p>
				</div>
			</div>
		</div>
	</div>}
</div>
